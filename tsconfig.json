{
  "compilerOptions": {
    "declaration": true,

    "allowJs": false,
    "outDir": "./dist",

    "strict": true,

    "target": "ES2017",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowArbitraryExtensions": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
