{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",

    "declaration": true,

    "allowJs": false,
    "outDir": "./dist",

    "strict": true,

    "moduleResolution": "node",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
